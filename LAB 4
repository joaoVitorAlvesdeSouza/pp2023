/*
Fa√ßa  uma  fun√ß√£o  para  verificar  se  um  n√∫mero  √©  um  quadrado  perfeito.  Um  quadrado 
perfeito  √©  um  n√∫mero  inteiro  n√£o  negativo  que  pode  ser  expresso  como  o  quadrado  de 
outro n√∫mero inteiro. Ex.: 1, 4, 9...
*/

#include <stdio.h>

int checkPerfectSquare(int number);

void main()
{
    int number = 0;

    scanf("%d", &number);
    
    if (checkPerfectSquare(number)) printf("√â um quadrado perfeito\n");
    else printf("N√£o √© um quadrado perfeito\n");
}

int checkPerfectSquare(int number)
{
    int i = 1;

    while (i * i < number)
        i++;

    if (i * i == number)
        return 1;
    else

 return 0;
}

