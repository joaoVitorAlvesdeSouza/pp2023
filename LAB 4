/*
Crie uma fun√ß√£o que recebe como par√¢metro um n√∫mero inteiro e devolve o seu dobro.
*/

#include <stdio.h>

int dobro(int num);

void main()
{
    int numero = 0;

    printf("Digite um n√∫mero: ");
    scanf("%d", &numero);

    printf("O dobro de %d eh %d\n", numero, dobro(numero));
}

int dobro(int num) {
    return num * 2;
}

