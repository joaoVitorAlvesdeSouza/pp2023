//20

/*
Crie uma fun√ß√£o que receba como par√¢metro um valor inteiro e gere como sa√≠da n linhas 
com pontos de exclama√ß√£o, conforme o exemplo abaixo (para n = 5): 
 
! 
!! 
!!! 
!!!! 
!!!!! 
*/

#include <stdio.h>

void printExclamation(int n);

void main()
{
    int n;

    scanf("%d", &n);
    printExclamation(n);
}

void printExclamation(int n)
{
    int i, j;

    for (i = 1; i <= n; i++)
    {
        for (j = 1; j <= i; j++)
            printf("!");
        printf("\n");
    }
}

