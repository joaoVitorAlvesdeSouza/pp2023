/*
Fa√ßa uma fun√ß√£o que receba a data atual (dia, m√™s e ano em inteiro) e exiba-a na tela no
formato textual por extenso. Ex.: Data: 18/11/2022, Imprimir: 18 de novembro de 2022.
*/

#include <stdio.h>

void formatDate(int dia, int mes, int ano);

void main()
{
    int dia;
    int mes;
    int ano;

    scanf("%d/%d/%d", &dia, &mes, &ano);
    formatDate(dia, mes, ano);
}

void formatDate(int dia, int mes, int ano)
{
    char* months[] = {"janeiro", "fevereiro", "mar√ßo", "abril", "maio", "junho", "julho", "agosto", "setembro", "outubro", "novembro", "dezembro"};

    printf("%d de %s de %d\n", dia, mes[mes - 1], ano);
}

